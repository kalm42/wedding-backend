enum Permission {
  ADMIN
  USER
}

enum TransactionType {
  STRIPE
  MAIL
}

enum Gift {
  GYM
  HONEYMOON
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  address: Address! @relation(link: TABLE)
  resetToken: String
  resetTokenExpiry: Float
  rsvpToken: String
  rsvpTokenExpiry: Float
  isGoing: Boolean! @default(value: false)
  guestCount: Int! @default(value: 0)
  permissions: [Permission] @scalarList(strategy: RELATION)
  transactions: [Transaction]! @scalarList(strategy: RELATION)
  invitations: [Invitation]! @scalarList(strategy: RELATION)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Address {
  id: ID! @id
  hash: String! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  line1: String
  line2: String
  city: String
  state: String
  zip: String
}

type Transaction {
  id: ID! @id
  type: TransactionType!
  charge: Fund @relation(link: TABLE)
  price: Int!
  gift: Gift!
  user: User @relation(link: TABLE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Fund {
  id: ID! @id
  charge: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Invitation {
  id: ID! @id
  to: Address!
  foreign_id: String!
  thumbnails: [String]! @scalarList(strategy: RELATION)
  expected_delivery_date: DateTime!
  send_date: DateTime
  pages: Int!
  user: User! @relation(link: TABLE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
